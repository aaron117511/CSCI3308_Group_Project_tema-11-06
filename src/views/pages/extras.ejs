<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<main>
  <div class="container">
    <img id = "profile-pic" src="<%= spotify_user.images[0]?.url %>" alt="display picture">
	  <h1 class="text-white"><%="Welcome to Better Wrapped " + spotify_user.display_name%></h1>
   

    <h2 class ="text-white">Select a timeline:</h2>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown">
      Select Timeline
      </button>
      <div class="dropdown-menu" >
        <a class="dropdown-item" href="/extras?timeline=long_term">year long</a>
        <a class="dropdown-item" href="/extras?timeline=medium_term">last 6 months</a>
        <a class="dropdown-item" href="/extras?timeline=short_term">1-2 months</a
      </div>
    </div>
  </div>

  <table id = "infoContainer">
    <tr width = "100%">
    <td>
      <div class="page-content page-container" id="page-content" >
        <div class="padding">
          <div class="row">
            <h3 class="text-white">Top Tracks</h3>
            <div class="col-sm-16">
                      
            <div class="container-fluid d-flex justify-content-center">
              <div class="list list-row card" id="sortable" data-sortable-id="0" aria-dropeffect="move" >
  
                <% top_tracks.items.forEach(function(track) { %>
                  <div class="list-item" data-id="9" data-item-sortable-id="0" draggable="true" role="option" aria-grabbed="false">
                    <div><a href="#" data-abc="true"><span class="w-40 avatar gd-info"><img src="<%= track ? track.album.images[0].url : "not found" %>" alt="."></span></a></div>
                    <div class="flex">
                      <a href="#" class="item-author text-color item-except" data-abc="true"><%= track ? track.name : "not found" %></a>
                      <div class="text-muted text-sm h-1x"><%= track ? track.album.artists[0].name : "not found" %></div>
                    </div>
                    <div class="no-wrap">
                      <div class="item-date text-muted text-sm d-none d-md-block"><%=  track ? track.album.name : "not found"%></div>
                    </div>
                    <div>
                      <div class="item-action dropdown">
                        <a href="#" data-toggle="dropdown" class="text-muted" data-abc="true">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-vertical">
                            <circle cx="12" cy="12" r="1"></circle>
                            <circle cx="12" cy="5" r="1"></circle>
                            <circle cx="12" cy="19" r="1"></circle>
                          </svg>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right bg-black" role="menu">
                          <a class="dropdown-item" href="#" data-abc="true">See detail </a><a class="dropdown-item download" data-abc="true">Download </a><a class="dropdown-item edit" data-abc="true">Edit</a>
                          <div class="dropdown-divider"></div>
                          <a class="dropdown-item trash" data-abc="true">Delete item</a>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
    
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </td>
    </tr>
  </table>

  <div class="container pb-4 justify-content-center">
    <!-- THE REST OF YOUR HTML CODE GOES HERE -->
    <h3 class ="text-white justify-content-center">Create a Playlist:</h3>
    <form action="/playlist" method="POST" target="_blank">
      <input type="text justify-content-center" id="name" name="name"/>
      <input type="hidden" id="track_uris" name="track_uris" value="<%=track_uris%>"/>
      <div class="justify-content-center d-flex">
        <button type="submit" class="btn btn-primary">Create Playlist</button>
      </div>
    </form>
  </div>
  <div class="container py-4"></div>
</main>

